@model Payment
@{
    ViewBag.Title = "Delete Payment";
}

<div class="jumbotron alert-danger mt-4">
    <h1>Confirm Deletion</h1>
    <p>Are you sure you want to delete Payment #@Model.PaymentID for @Model.Customer.Name?</p>

    <form asp-action="PaymentDelete" method="post">
        <input type="hidden" asp-for="PaymentID" />

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="PaymentList" class="btn btn-primary">Cancel</a>
    </form>
</div>
