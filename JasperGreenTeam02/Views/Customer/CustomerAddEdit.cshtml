@model Customer
@{
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title;
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

    <h1>@ViewBag.Title</h1>

    <form asp-action="Save" method="post">

        <div class="row form-group">
            <label asp-for="Name" class="col-sm-3">Name</label>
            <div class="col">
                <input asp-for="Name" class="form-control">
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="Name" class="text-danger"></span> @*puts validation message at side of the respective field*@
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="BillingAddress" class="col-sm-3">Address</label>
            <div class="col">
                <input asp-for="BillingAddress" class="form-control">
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="BillingAddress" class="text-danger"></span> @*puts validation message at side of the respective field*@
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="BillingCity" class="col-sm-3">City</label>
            <div class="col">
                <input asp-for="BillingCity" class="form-control">
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="BillingCity" class="text-danger"></span> @*puts validation message at side of the respective field*@
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="BillingState" class="col-sm-3">State</label>
            <select asp-for="BillingState" class="form-control col-sm-3">
                <option value="">Select a state...</option>
            @foreach (String s in ViewBag.States)
            {
                <option value="s">@s</option>
            }
        </select>
        <div class="col-sm-6">
            <span asp-validation-for="BillingState" class="text-danger"></span> @*puts validation message at side of the respective field*@
        </div>
    </div>
        <div class="row form-group">
            <label asp-for="BillingZIP" class="col-sm-3">Postal Code</label>
            <div class="col">
                <input asp-for="BillingZIP" class="form-control">
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="BillingZIP" class="text-danger"></span> @*puts validation message at side of the respective field*@
            </div>
        </div>
        <div class="row form-group">
            <label asp-for="CustomerPhone" class="col-sm-3">Phone</label>
            <div class="col">
                <input asp-for="CustomerPhone" class="form-control">
            </div>
            <div class="col-sm-6">
                <span asp-validation-for="CustomerPhone" class="text-danger"></span> @*puts validation message at side of the respective field*@
            </div>
        </div>

        <input type="hidden" asp-for="CustomerID" />

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="CustomerList" class="btn btn-primary">Cancel</a>
    </form>
    @*css styling for boxes with validation errors*@
    <style>
        .input-validation-error {
            border: 2px solid #dc3545;
            background-color: #faebd7;
        }

        .validation-summary-valid {
            display: none;
        }

        .validation-summary-errors ul {
            list-style: none;
        }
    </style>
